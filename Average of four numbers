import java.util.Scanner;

public class extwo {
	public static void main(String[]org) {
		int ave,sum,x1,x2,y1,y2;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter nummber1 :");
		x1=sc.nextInt();
		System.out.println("Enter nummber2 :");
		x2=sc.nextInt();
		System.out.println("Enter nummber3 :");
		y1=sc.nextInt();
		System.out.println("Enter nummber4 :");
		y2=sc.nextInt();
		sum=x1+x2+y1+y2;
		ave=sum/4;
		System.out.println("The Average of four numbers is :"+ave);
	}

}
